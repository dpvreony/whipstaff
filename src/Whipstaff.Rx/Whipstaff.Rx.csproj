<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net10.0;net10.0-android;net10.0-ios;net10.0-tvos;net9.0-macos</TargetFrameworks>
    <TargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">$(TargetFrameworks);net472</TargetFrameworks>
    <Nullable>enable</Nullable>
    <PackageDescription>Re-usable logic for working with Reactive Extensions.</PackageDescription>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Splat" Version="18.1.1" />
    <PackageReference Include="System.Reactive.Linq" Version="6.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\_shared\**\*.cs" LinkBase="SharedInternals" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Whipstaff.Runtime\Whipstaff.Runtime.csproj" />
  </ItemGroup>
</Project>
