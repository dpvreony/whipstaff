<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net10.0;net10.0-android</TargetFrameworks>
    <TargetFrameworks Condition=" '$(OS)' != 'linux' ">$(TargetFrameworks);net10.0-ios;net10.0-tvos;net10.0-macos</TargetFrameworks>
    <TargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">$(TargetFrameworks);net472</TargetFrameworks>
    <Nullable>enable</Nullable>
    <PackageDescription>Re-usable logic for working with ReactiveUI.</PackageDescription>
    <!-- review IL2026 once RXUI updated for AOT. -->
    <NoWarn>$(NoWarn),GR0049,IL2026</NoWarn>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ReactiveUI" Version="22.3.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Whipstaff.Rx\Whipstaff.Rx.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\_shared\**\*.cs" LinkBase="SharedInternals" />
  </ItemGroup>
</Project>
