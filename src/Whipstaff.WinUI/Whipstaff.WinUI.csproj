<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0-windows10.0.19041</TargetFramework>
    <Nullable>enable</Nullable>
    <RuntimeIdentifiers>win-x64;win-x86;win-arm64</RuntimeIdentifiers>
    <PackageDescription>Re-usable logic for working with WinUI.</PackageDescription>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    <!-- Disable MSIX packaging and PRI generation on non-Windows platforms -->
    <GenerateAppInstallerFile Condition="!$([MSBuild]::IsOSPlatform('windows'))">false</GenerateAppInstallerFile>
    <AppxPackage Condition="!$([MSBuild]::IsOSPlatform('windows'))">false</AppxPackage>
    <WindowsPackageType Condition="!$([MSBuild]::IsOSPlatform('windows'))">None</WindowsPackageType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="10.0.3" ReferenceOutputAssembly="true" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.3" />
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.3719.77" />
    <PackageReference Include="ReactiveUI.WinUI" Version="22.3.1" />
    <PackageReference Include="ReactiveMarbles.ObservableEvents.SourceGenerator" Version="1.3.1" PrivateAssets="all" />
    <PackageReference Include="Vetuviem.Core" Version="0.13.1" />
    <PackageReference Include="Vetuviem.WinUI.SourceGenerator" Version="0.12.19">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Whipstaff.ReactiveUI\Whipstaff.ReactiveUI.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <Vetuviem_Make_Classes_Public>true</Vetuviem_Make_Classes_Public>
    <Vetuviem_Root_Namespace>Whipstaff.WinUI</Vetuviem_Root_Namespace>
  </PropertyGroup>

</Project>
